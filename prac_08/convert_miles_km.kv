BoxLayout:
    orientation: 'vertical'
    spacing: 10
    padding: [10, 10, 10, 10]

    BoxLayout:
        orientation: 'horizontal'
        spacing: 5

        TextInput:
            id: miles_input
            text: '34'
            font_size: 36
            multiline: False
            on_text: app.calculate_km()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            spacing: 5

            Button:
                text: 'Up'
                font_size: 18
                on_press: app.adjust_miles(1)

            Button:
                text: 'Down'
                font_size: 18
                on_press: app.adjust_miles(-1)
   # Button:
   # text: 'Convert m to km'
   # on_press: app.handle_calculate()

    Label:
        id: result_label
        text: '54.717'
        font_size: 48
        color: (1, 1, 0, 1)
